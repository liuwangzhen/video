/* animation */
.animation{
  
  animation: myani 1s;
}

@keyframes myani{
  0%{
    font-size:60rpx;
  }
  50%{
    font-size:120rpx;
    margin-left: -30rpx;
    margin-top: -30rpx;
  }
  100%{
    font-size: 60rpx;
  }
}
.animation2{
  margin-left:80rpx;
  visibility: hidden;
  animation: myani2 1s;
}
.hidden{
  visibility: hidden;
}
@keyframes myani2{
  0%{
  margin-top:-10px;
  visibility: visible;
  }
  25%{
    margin-top:-30px;
    opacity: 0.7;
  }
  50%{
    margin-top:-50px;
    opacity: 0.4;
  }
  100%{
    margin-top:-70px;
    opacity: 0.1;
  }
}
